stage('build authenticator and app') {
    node('docker_slave-centos-7.5-x86_64') {
        git([url: 'https://github.com/maidsafe/safe_client_libs.git'])

        def user_id = sh(returnStdout: true, script: 'echo $UID').trim()
        def group_id = sh(returnStdout: true, script: 'getent group $USER | awk -F : "{ print \$3 }"').trim()
        sh('docker run -v "$PWD":/usr/src/crust ' +
            '-u ${user_id}:${group_id}' +
            'maidsafe/safe-client-libs-build:0.9.0 scripts/build-real')
    }
}
